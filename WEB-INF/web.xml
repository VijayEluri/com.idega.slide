<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <!-- The IWSlideAuthenticator Filter -->
    <filter>
        <filter-name>IWSlideAuthenticator</filter-name>
        <filter-class>com.idega.slide.authentication.IWSlideAuthenticator</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>IWSlideAuthenticator</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <!-- Definition and configuration of Slide's WebDAV servlet mapped to scope /files -->
    <servlet>
        <servlet-name>webdav</servlet-name>
        <display-name>Slide DAV Server</display-name>
        <servlet-class>com.idega.slide.webdavservlet.WebdavExtendedServlet</servlet-class>
        <init-param>
            <param-name>domain</param-name>
            <param-value>autodetect</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
      <servlet-name>webdav</servlet-name>
      <url-pattern>/content</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>webdav</servlet-name>
      <url-pattern>/content/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>webdav</servlet-name>
      <url-pattern>/content/*</url-pattern>
    </servlet-mapping>
    
</web-app>